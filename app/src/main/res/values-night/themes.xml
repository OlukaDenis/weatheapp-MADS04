<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.NSSFWeather" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/rainy</item>
        <item name="colorPrimaryVariant">@color/rainy</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/rainy</item>
        <item name="colorSecondaryVariant">@color/rainy</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColor">@color/white</item>

        <item name="android:windowBackground">@color/black</item>
    </style>
</resources>